<!DOCTYPE html>
<html lang="en">
    <head>
        <%- include("./partialViews/head", { mainTitle: language.mainTitle }); %>
    </head>

    <body class="container pt-0">
        <%- include("./partialViews/navigation", { language: language, lastVisitedUrl: lastVisitedUrl }) %>

        <main>
            <div class="container-fluid mt-5">
                <div class="row">
                    <div class="col-md-12">
                        <h2><%= "Nazwa tematu" %></h2>
                        <div class="card mb-3 mt-4">
                            <% posts.forEach(function(post) { %>
                                <%- include("./partialViews/post", { language: language, post: post }); %>
                            <% }) %>
                        </div>
                    </div>
                </div>
            </div>
        </main>

        <%- include("./partialViews/footer", { language: language })%>
        <%- include("./partialViews/bootstrapLibraries"); %>
    </body>
</html>
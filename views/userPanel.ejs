<!DOCTYPE html>
<html lang="en">
    <head>
        <%- include("./partialViews/head", { mainTitle: language.mainTitle }); %>
    </head>

    <body class="container pt-0">
        <%- include("./partialViews/navigation", { language: language, lastVisitedUrl: lastVisitedUrl, isLoggedIn: isLoggedIn, userRole: userRole }) %>
        <%- include("./partialViews/messages", { language: language, errorMessage: errorMessage, noticeMessage: noticeMessage }) %>

        <main>
            <div class="container-fluid mt-5">
                <div class="row">
                    <h2><%= language.userPanel %></h2>
                    <div class="card mb-3 mt-4"></div>
                        <form action="/user/changePassword" method="POST">
                            <div class="mb-3 col-4">
                                <label for="oldPasswordInput" class="form-label"><%= language.oldPassword %></label>
                                <input type="password" class="form-control" name="oldPassword" id="oldPasswordInput" placeholder="<%= language.oldPassword %>">
                            </div>
                            <div class="mb-3 col-4">
                                <label for="newPasswordInput" class="form-label"><%= language.newPassword %></label>
                                <input type="password" class="form-control" name="newPassword" id="newPasswordinput" placeholder="<%= language.newPassword %>">
                            </div>
                            <div class="mb-3 col-4">
                                <label for="newPasswordRepeatInput" class="form-label"><%= language.newPasswordRepeat %></label>
                                <input type="password" class="form-control" name="newPasswordRepeat" id="newPasswordRepeatInput" placeholder="<%= language.newPasswordRepeat %>">
                            </div>
                            <button type="submit" class=" btn btn-primary"><%= language.changePassword %></button>
                        </form>
                    </div>
                </div>
            </div>
        </main>

        <%- include("./partialViews/footer", { language: language })%>
        <%- include("./partialViews/bootstrapLibraries"); %>
    </body>
</html>
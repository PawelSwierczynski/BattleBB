<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="/"><%= language.mainTitle %></a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navigation" aria-controls="navigation" aria-expanded="false">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navigation">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                <li class="nav-item">
                    <a class="nav-link" href="/"><%= language.homePage %></a>
                </li>
                <% if (isLoggedIn) { %>
                    <li class="nav-item">
                        <a class="nav-link" href="/user/panel"><%= language.userPanel %></a>
                    </li>
                    <% if (userRole[0].IdRola === 1) { %>
                        <li class="nav-item">
                            <a class="nav-link" href="/admin"><%= language.adminPanel %></a>
                        </li>
                    <% } %>
                    <li class="nav-item">
                        <a class="nav-link" href="/user/logOut"><%= language.logOut %></a>
                    </li>
                <% } else { %>
                    <li class="nav-item">
                        <a class="nav-link" href="/user/logIn"><%= language.logIn %></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/user/register"><%= language.register %></a>
                    </li>
                <% } %>
            </ul>
            <% if (language.description === "American English") { %>
                <a href=<%= "/pl?redirectTo=" + lastVisitedUrl %>>
                    <img class="me-3" style="width: 35px" src="/images/PolishFlag.svg" />
                </a>
            <% } else { %>
                <a href=<%= "/en-us?redirectTo=" + lastVisitedUrl %>>
                    <img class="me-3" style="width: 35px" src="/images/USAFlag.svg" />
                </a>
            <% } %>
            <form class="d-flex">
                <input class="form-control me-2" type="search" aria-label="Search">
                <button class="btn btn-primary" type="submit"><%= language.searchbar %></button>
            </form>
        </div>
    </div>

<hr class="m-0">
<div class="card-body py-3" id="<%= post.PostIndex %>">
    <div class="row no-gutters align-items-center">
        <div class="col">
            <a href="/user/<%= post.UserIdentifier %>"><%= post.Login %></a> <br>
            <%= language["rank" + post.RankIdentifier] %> <br>
        </div>
        <% if (isLoggedIn) { %>
            <div class="col-8">
                <ul class="list-group list-group-flush">
                    <span><%- post.Content %></span><br>
                </ul>
            </div>
            <div class="col-2">
                <% if (post.IsUserPermittedToEditPost != undefined) { %>
                    <a href="<%= "/thread/" + thread.Identifier + "/editPost/" + post.Identifier %>" class="btn btn-primary mt-1" role="button"><%= language.editPost %></a><br>
                <% } %>
                <a href="<%= "/thread/" + thread.Identifier + "/quotePost/" + post.Identifier %>" class="btn btn-primary mt-1" role="button"><%= language.quotePost %></a>
                <% if(userRole === 1 || userRole === 2) { %>
                    <form action="<%= "/thread/" + thread.Identifier + "/deletePost/" + post.Identifier %>" method="POST">
                        <button class="btn btn-danger mt-1" role="button"><%= language.deletePostButton %></button>
                    </form>
                <% } else { %>
                    <a href="<%= "/thread/" + thread.Identifier + "/reportPost/" + post.Identifier %>" class="btn btn-danger mt-1" role="button"><%= language.reportPost %></a>
                <% } %>     
            </div>
        <% } else { %>
            <div class="col-10">
                <ul class="list-group list-group-flush">
                    <span><%- post.Content %></span><br>
                </ul>
            </div>
        <% } %>
    </div>
</div>
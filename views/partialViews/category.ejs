            <div class="d-none d-md-block col-6 text-muted">
                <div class="row no-gutters align-items-center">
                    <div class="col-5"><%= language.threads %></div>
                    <div class="col-6"><%= language.created %></div>
                </div>
            </div>
        </div>
    </div>
    <% category.KategoriePodrzedne.forEach(function(childCategory) { %>
        <% var number = 0; %>
        <% threads.forEach(function(thread) { %>
            <% if(thread.IdCategory === childCategory.IdKategoriaPodrzÄ™dna) { %>
                <% number = thread.ThreadCount; %>
            <% } %>
        <% }); %> 
        <%- include("./childCategory.ejs", { childCategory: childCategory, threadNumber: number }); %>
    <% }); %>                
</div>
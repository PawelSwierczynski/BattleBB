<!DOCTYPE html>
<html lang="en">
    <head>
        <%- include("./partialViews/head", { mainTitle: language.mainTitle }); %>        
    </head>

    <body class="container pt-0">
        <%- include("./partialViews/adminPanelNavigation", { language: language, lastVisitedUrl: lastVisitedUrl, isLoggedIn: isLoggedIn, userRole: userRole }) %>



        <main>
          <h2><%= language.addSubforumTitle %></h2>
              <form action="/admin/addSubforum" method="POST">
                <div class="form-group">
                  <label for="nameInput"><%= language.name %></label>
                  <input type="name" class="form-control" name="subforumName" id="nameInput" placeholder=<%= language.enterCategoryName %>>
                </div>
                <div class="form-group">
                    <label for="parentCategory"><%= language.parentCategory %></label>
                    <select class="form-control" name="parentCategory" id="parentCategory">
                      <% categories.forEach(function(category) { %>
                        <option><%= category["Nazwa"] %></option>
                      <% }); %>                      
                    </select>
                </div>              
                <button type="submit" class=" btn btn-primary"><%= language.addCategoryButton %></button>
              </form>
        </main>
        <%- include("./partialViews/footer", { language: language })%>        
        <%- include("./partialViews/bootstrapLibraries"); %>
    </body>
</html>
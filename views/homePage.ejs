<!DOCTYPE html>
<html lang="en">
    <head>
        <%- include("./partialViews/head", { mainTitle: language.mainTitle }); %>
    </head>

    <body class="container pt-0">
        <%- include("./partialViews/navigation", { language: language, lastVisitedUrl: lastVisitedUrl }) %>

        <main>
            <% if (categories.length === 0){ %>
                <h1><%= language.noCategories %></h1>
            <% } else { %>
            <div class="container-fluid mt-5">
                <div class="row">
                    <div class="col-md-12">
                        <% categories.forEach(function(category) { %>
                            <%- include("./partialViews/category", { category: category, threads: threads }); %>
                        <% }); %>
                    </div>
                </div>
            </div>
            <% } %>
        </main>

        <%- include("./partialViews/footer", { language: language })%>
        <%- include("./partialViews/bootstrapLibraries"); %>
    </body>
</html>